<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE checkstyle PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<checkstyle>
    <module name="Checker">
        <!-- Example Checkstyle rules -->
        <module name="TreeWalker">
            <module name="Header">
                <property name="header" value="/* Your header comment */"/>
                <property name="allowMultiple" value="true"/>
            </module>
            <module name="JavadocMethod"/>
            <module name="MethodName"/>
        </module>
        <!-- Line length check as a separate module -->
        <module name="LineLength">
            <property name="max" value="120"/>
            <property name="ignorePattern" value="^package.*|^import.*"/>
        </module>
    </module>
</checkstyle>
